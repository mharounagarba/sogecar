{
  "name": "exgecar",
  "homepage": "./",
  "version": "0.0.0",
  "description": "eXpert en Courtage, Assurance & RÃ©assurances",
  "main": "electron/main.js",
  "author": "3S Consulting",
  "type": "commonjs",
  "license": "MIT",
  "private": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/mharounagarba/sogecar.git"
  },
  "build": {
    "appId": "com.exgecar.apps",
    "productName": "eXgecar",
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "win": {
      "publish": [
        "github"
      ],
      "target": [
        "nsis"
      ],
      "icon": "assets/icon.ico",
      "certificateFile": "private/eXgecar.pfx",
      "verifyUpdateCodeSignature": false,
      "publisherName": "eXgecar"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "icon": "assets/icon.png"
    },
    "publish": {
      "provider": "github",
      "owner": "mharounagarba",
      "repo": "sogecar",
      "private": false,
      "releaseType": "draft"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "assets/icon.ico",
      "uninstallerIcon": "assets/icon.ico",
      "installerHeaderIcon": "assets/icon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "scripts": {
    "dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "electron": "electron electron/main.js",
    "electron-dev": "concurrently \"yarn dev\" \"wait-on http://localhost:5173 && electron .\"",
    "rebuild": "electron-rebuild -f -w better-sqlite3",
     "dist": "electron-builder -w",
    "make-cert": "electron-builder create-self-signed-cert -p eXgecar",
    "deploy": "electron-builder build -w -p onTagOrDraft"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^2.8.2",
    "bcryptjs": "^3.0.2",
    "better-sqlite3": "^11.10.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-redux": "^9.2.0",
    "react-router-dom": "^7.6.1",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react": "^4.4.1",
    "concurrently": "^9.1.2",
    "electron": "^36.3.2",
    "electron-builder": "^26.0.12",
    "electron-rebuild": "^3.2.9",
    "eslint": "^9.25.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "vite": "^6.3.5",
    "wait-on": "^8.0.3"
  }
}
